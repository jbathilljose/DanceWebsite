extend basee.pug 
block scripts
    script(src="/static/script.js")
block style 
    style 
        include ../static/style.css
        include ../static/contact.css
block content 
    div.contactContainer
        h1.contact Contact Us
        form(action='/contact' method="post" class="myForm")
            input(type="text" name="name" placeholder="Enter your Name" class="myInput")
            input(type="phone" name="phone" placeholder="Enter your Phone number" class="myInput")
            input(type="email" name="email" placeholder="Enter your Email ID" class="myInput")
            input(type="text" name="address" placeholder="Enter your Address" class="myInput")
            input(type="text" name="query" placeholder="Enter your Query" class="myInput")
            button(class="btn")
                |Submit